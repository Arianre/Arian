/*
Write a program that uses a loop to display patterns below:

+
++
+++
++++
+++++
++++++
+++++++
++++++++
+++++++++
++++++++++


++++++++++
+++++++++
++++++++
+++++++
++++++
+++++
++++
+++
++
+

*/

#include <iostream>
using namespace std;
int main()
{
     for ( int i = 1 ; i <= 50 ; i++)
     {
        for ( int j = 1 ; j <= i ; j++)
        {
         cout<<"+" ;
        }
        cout<< endl ;
     }
    cout<<"\n\n" ;
    for (int k = 50 ; k > 0 ; k--)
    {
        for (int l = 1 ; l <= k ; l++)
        {
            cout<<"+" ;
        }
        
        cout<<endl;
    }
 
    
}
